<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">


    <ImageButton
        android:id="@+id/btnExitDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:src="@drawable/clear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvListingDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="140dp"
        android:text="Listing details"
        android:textColor="@android:color/black"
        android:textSize="@dimen/details_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/LLTitleDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnExitDetails"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/border_bottom"
        >
        <TextView
            android:id="@+id/tvTitleDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:text="Title"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="@dimen/details_textSize" />

        <TextView
            android:id="@+id/txtTitleDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/details_textSize"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLDescriptionDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LLTitleDetails"
        android:background="@drawable/border_bottom"
        >
        <TextView
            android:id="@+id/tvDescriptionDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:text="Description"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="@dimen/details_textSize" />

        <TextView
            android:id="@+id/txtDescriptionDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/details_textSize" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLLocationDetails"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LLDescriptionDetails"
        android:background="@drawable/border_bottom"
        >
        <TextView
            android:id="@+id/tvLocationDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:text="Location"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="@dimen/details_textSize"/>

        <TextView
            android:id="@+id/txtLocationDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/details_textSize"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLWorkTypeDetails"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LLLocationDetails"
        android:background="@drawable/border_bottom">
        <TextView
            android:id="@+id/tvWorkTypeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Type"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="@dimen/details_textSize" />

        <TextView
            android:id="@+id/txtWorkTypeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/details_textSize" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLWorkCategoryDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LLWorkTypeDetails"
        android:background="@drawable/border_bottom"
        >
        <TextView
            android:id="@+id/tvWorkCategoryDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:text="Work Category"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="@dimen/details_textSize" />

        <TextView
            android:id="@+id/txtWorkCategoryDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/details_textSize" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLUserDetails"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LLWorkCategoryDetails"
        android:background="@drawable/border_bottom"
        >
        <TextView
            android:id="@+id/txtUserDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:text="User Details"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="@dimen/details_textSize"/>
        <LinearLayout
            android:id="@+id/LLUserName"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tvNameDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:text="Name:"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="@dimen/details_textSize"/>
            <TextView
                android:id="@+id/txtUserNameDetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/details_textSize"
                />
            <TextView
                android:id="@+id/tvSurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:text="Last Name:"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="@dimen/details_textSize"/>
            <TextView
                android:id="@+id/txtUserSurnameDetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/details_textSize"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LLToolsDetails"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtToolsDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tools :"
                android:textSize="@dimen/details_textSize"
                android:textColor="@android:color/holo_green_dark"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />
            <TextView
                android:id="@+id/txtToolsRequired"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@android:color/black"
                android:textSize="@dimen/details_textSize"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btnOffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Make offer"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textSize="@dimen/details_textSize"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>