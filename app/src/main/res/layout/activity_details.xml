<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/layoutGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <ImageButton
        android:id="@+id/btnExitDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:src="@drawable/clear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvListingDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="140dp"
        android:text="Listing details"
        android:textColor="@android:color/black"
        android:textSize="@dimen/details_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:text="Title"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="@dimen/details_textSize"
        app:layout_constraintBottom_toTopOf="@+id/txtTitleDetails"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtTitleDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/details_textSize"
        app:layout_constraintBottom_toTopOf="@+id/tvDescriptionDetails"
        app:layout_constraintStart_toStartOf="@+id/tvTitleDetails" />

    <TextView
        android:id="@+id/tvDescriptionDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Description"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="@dimen/details_textSize"
        app:layout_constraintBottom_toTopOf="@+id/txtDescriptionDetails"
        app:layout_constraintStart_toStartOf="@+id/txtTitleDetails" />

    <TextView
        android:id="@+id/txtDescriptionDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/details_textSize"
        app:layout_constraintBottom_toTopOf="@+id/tvLocationDetails"
        app:layout_constraintStart_toStartOf="@+id/tvDescriptionDetails" />

    <TextView
        android:id="@+id/tvLocationDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Location"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="@dimen/details_textSize"
        app:layout_constraintBottom_toTopOf="@+id/txtLocationDetails"
        app:layout_constraintStart_toStartOf="@+id/txtDescriptionDetails" />

    <TextView
        android:id="@+id/txtLocationDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/details_textSize"
        app:layout_constraintBottom_toTopOf="@+id/tvWorkTypeDetails"
        app:layout_constraintStart_toStartOf="@+id/tvLocationDetails" />

    <TextView
        android:id="@+id/tvWorkTypeDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="Work Type"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="@dimen/details_textSize"
        app:layout_constraintBottom_toTopOf="@+id/layoutGuideLine"
        app:layout_constraintStart_toStartOf="@id/txtLocationDetails" />

    <TextView
        android:id="@+id/txtWorkTypeDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/details_textSize"
        app:layout_constraintStart_toStartOf="@id/tvWorkTypeDetails"
        app:layout_constraintTop_toBottomOf="@id/tvWorkTypeDetails" />


    <TextView
        android:id="@+id/tvWorkCategoryDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="48dp"
        android:text="Work Category"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="@dimen/details_textSize"
        app:layout_constraintBottom_toTopOf="@+id/layoutGuideLine"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtWorkCategoryDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/details_textSize"
        app:layout_constraintStart_toStartOf="@+id/tvWorkCategoryDetails"
        app:layout_constraintTop_toBottomOf="@+id/tvWorkCategoryDetails" />

    <TextView
        android:id="@+id/txtToolsDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/details_textSize"
        android:textColor="@android:color/black"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/layoutGuideLine"
        app:layout_constraintStart_toStartOf="parent"
        />


    <Button
        android:id="@+id/btnOffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Make offer"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textSize="@dimen/details_textSize"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>